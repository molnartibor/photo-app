<% if current_user %>
    <h3>Welcome: <%= current_user.email %></h3>
<% else %>
    <div class="jumbotron">
        <h2>Welcome to the Photo Management App!</h2>
        <p class="lead">
            You`ll love managing your Photos with our application!
        </p>
    </div>
    <div class="row">
        <div class="plans clearfix">
            <div class="col-xs-3 col-xs-offset-3 plan">
                <h2>Premium Plan</h2>
                <div class="price pull-right">Price: $1</div>
                <div class="features">
                    <ul>
                        <li>Unlimited Image Uploads</li>
                        <li>Responsive design</li>
                        <li>Access anywhere</li>
                    </ul>
                </div>
                <p><%= link_to 'Sign Up', new_user_registration_path, 
                        class: 'btn btn-primary'%></p>
            </div>
            <div class="col-xs-3 plan">
                <h2>Amaze Plan</h2>
                <div class="price pull-right">Price: $2</div>
                <div class="features">
                    <ul>
                        <li>Unlimited Image Uploads</li>
                        <li>Responsive design</li>
                        <li>Access anywhere</li>
                        <li class="extra">Unlimited projects</li>
                    </ul>
                </div>
                <p><%= link_to 'Sign Up', new_user_registration_path, 
                        class: 'btn btn-primary sign-up' %></p>
            </div>
        </div>
    </div>
<% end %>